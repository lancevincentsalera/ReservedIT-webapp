@model ASI.Basecode.Services.ServiceModels.RoomViewModel

@section styles {
    <link rel="stylesheet" href="~/css/viewRoomCard.css" />
}

<div class="modal fade" id="viewRoomCardModal" tabindex="-1" role="dialog" aria-labelledby="createRoomModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <!-- Left Column for Images -->
                    <div class="col-md-6">
                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <!-- Add your dynamic carousel items here -->
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                    <!-- Right Column for Description -->
                    <div class="col-md-6">
                        <div class="description-container">
                            <h1 data-name="RoomName"></h1>
                            <h5>Description</h5>
                            <p data-name="Description"></p>
                            <!-- Room Info Section -->
                            <div class="room-info">
                                <div class="room-info-item">
                                    <i class="fa fa-map-marker"></i>
                                    <span>Location</span>
                                    <p data-name="Location"></p>
                                </div>
                                <div class="room-info-item">
                                    <i class="fa fa-users"></i>
                                    <span>Capacity</span>
                                    <p data-name="Capacity"></p>
                                </div>
                                <div class="room-info-item">
                                    <i class="fa fa-cog"></i>
                                    <span>Equipment</span>
                                    <p data-name="Equipments"></p>
                                </div>
                                <button class="btn-close" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Your JavaScript can remain here if needed
</script>