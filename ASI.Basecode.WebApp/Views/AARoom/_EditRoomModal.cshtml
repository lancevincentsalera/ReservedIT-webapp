@model ASI.Basecode.Services.ServiceModels.RoomViewModel

@section styles {
    <link rel="stylesheet" href="~/css/roomModal.css" />
}

<!-- Edit Room Modal -->
<div class="modal fade" id="editRoomModal" tabindex="-1" role="dialog" aria-labelledby="editRoomModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content ">
            <div class="modal-header">
                <h5 class="modal-title" id="editRoomModalLabel">Edit Room</h5>
            </div>
            <div class="modal-body">
                <form id="editRoomForm" action="#">
                    <div class="firstHalf">
                        <div class="uploadPhoto">
                            <div class="form-group file-upload">
                                <input type="hidden" name="RoomId" />
                                <input type="hidden" name="Thumbnail" />
                                <label for="thumbnail1">Thumbnail</label>
                                <div class="custom-file-upload">
                                    <input type="file" id="thumbnail1" name="RoomThumbnailImg"
                                           onchange="showImage(event, 'thumbnail1Preview')" accept="image/png, image/jpeg, image/jpg, image/heic" required />
                                    <label for="thumbnail1" class="upload-icon"> <i class="fa fa-plus"></i> </label>
                                    <div class="image-container">
                                        <button type="button" style="width: 24px; height: 24px;" class="delete-button" onclick="deleteImage('thumbnail1')"><span>&times;</span></button>
                                        <img id="thumbnail1Preview" class="image-preview" src="#" alt="Thumbnail Preview" style="display:none;" />
                                    </div>
                                </div>


                            </div>  
                            <div class="form-group file-upload">
                                <label for="uploadImage">Upload Image</label>
                                <div class="default-file-upload">
                                    <input type="file" id="uploadImage1" name="RoomGalleryImg" multiple onchange="displayFileNames(event)" />
                                    
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" id="name" name="RoomName" placeholder="Enter room name" required />
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea id="description" name="Description" rows="4" placeholder="Enter room description" required></textarea>
                        </div>
                    </div>

                    <div class="secondHalf">
                        <div class="additional-info">
                            <label style="font-weight: 600; margin-bottom:20px;">Additional Information</label>
                            <div class="form-group">
                                <label for="location">Location</label>
                                <input type="text" id="location" name="Location" placeholder="Enter location" />
                            </div>
                            <div class="form-group">
                                <label for="capacity">Capacity</label>
                                <input type="number" id="capacity" name="Capacity" placeholder="Enter capacity" required />
                            </div>
                            <div class="form-group">
                                <label for="equipments">Equipments</label>
                                <textarea id="equipments" name="Equipments" rows="4" placeholder="Enter room equipments" required></textarea>
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-close" data-dismiss="modal">Cancel</button>
                            <button type="submit"
                                    class="btn btn-custom"
                                    id="editUserBtn"
                                    onclick="displayConfirmationModal('#editRoomForm','#editRoomModal', '#confirmationRoomEditModal')">
                                Edit
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 
@Html.Partial("_RoomConfirmationModal")