<!-- confirm DELETE -->
<div class="modal fade" id="confirmationDeleteModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmationModalLabel">Confirm Delete</h5>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this item?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-close" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-secondary" id="confirmDeleteBtn" onclick="deleteModal(this, '#confirmationDeleteModal', 'DeleteUserPost', 'AAUser');">Delete</button>
            </div>
        </div>
    </div>
</div>

<!-- confirm ADD -->
<div class="modal fade" id="confirmationAddModal" tabindex="-1" aria-labelledby="confirmationAddModalLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmationAddModalLabel">Confirm Action</h5>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to add this item?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-close" onclick="hideConfirmationModal('#confirmationAddModal', '#createUserModal' )">Close</button>
                <button type="submit" class="btn btn-secondary" id="confirmAddBtn" onclick="submitForm(this, '#confirmationAddModal','#createUserForm', 'CreateUserPost', 'AAUser' )">Add</button>
            </div>
        </div>
    </div>
</div>

<!-- confirm EDIT -->
<div class="modal fade" id="confirmationEditModal" tabindex="-1" aria-labelledby="confirmationEditModalLabel" aria-hidden="true" data-backdrop="static">
