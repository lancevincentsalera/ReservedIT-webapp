<!-- confirm DELETE -->
<div class="modal fade" id="confirmationRoomDeleteModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmationModalLabel">Confirm Delete</h5>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this room?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-close" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-secondary" id="confirmDeleteBtn" onclick="deleteModal(this, '#confirmationRoomDeleteModal', 'PostDelete', 'AARoom');">Delete</button>
            </div>
        </div>
    </div>
</div>

<!-- confirm EDIT -->
<div class="modal fade" id="confirmationRoomEditModal" tabindex="-1" aria-labelledby="confirmationRoomEditModalLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmationEditModalLabel">Confirm Action</h5>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to edit this item?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-close" onclick="hideConfirmationModal('#confirmationEditModal', '#editUserModal')">Close</button>
                <button type="button" class="btn btn-secondary" id="confirmEditBtn" onclick="submitForm(this, '#confirmationRoomEditModal','#editRoomForm', 'PostEdit', 'AARoom' )">Edit</button>
            </div>
        </div>
    </div>
</div>







