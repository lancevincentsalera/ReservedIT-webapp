    var rooms = new List<dynamic>
    {
        new { Name = "Board Room", Description = "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt", Location = "14th Lane, Business Center, Sunion Road", Capacity = 7, Equipment = "None", ImageUrl = "board_room.jpg" },
        new { Name = "Ramen", Description = "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt", Location = "11th Floor, Business Center, Sunion Road", Capacity = 15, Equipment = "None", ImageUrl = "ramen.jpg" },
        new { Name = "Mantawi", Description = "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt", Location = "10th Floor, Business Center, Sunion Road", Capacity = 15, Equipment = "Projector", ImageUrl = "mantawi.jpg" },
        new { Name = "Orchid", Description = "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt", Location = "9th Floor, Business Center, Sunion Road", Capacity = 10, Equipment = "Whiteboard", ImageUrl = "orchid.jpg" },
        new { Name = "Tulip", Description = "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt", Location = "8th Floor, Business Center, Sunion Road", Capacity = 8, Equipment = "Teleconferencing", ImageUrl = "tulip.jpg" }
    };
}

@section styles {
    <link rel="stylesheet" href="~/css/roomsCard.css" />
}

<div class="room-header">
    <h1>Rooms</h1>
    <p>Find Meeting Rooms for your taste and needs.</p>
</div>
<button class="carousel-button left" onclick="moveLeft()">&#10094;</button>
<div class="container-wrapper">
    <div class="container">
        @foreach (var room in rooms)
        {
            <div class="card">
                <div class="card-content">
                    <h3>@room.Name</h3>
                    <img src="~/images/@room.ImageUrl" alt="@room.Name" class="card-image">
                    <h1>Description</h1>
                    <p>@room.Description</p>
                    <div class="details">
                        <div class="detail-item">
                            <span>Location</span>
                            <img src="~/images/location_icon.png" alt="Location">
                            <span>@room.Location</span>
                        </div>
                        <div class="detail-item">
                            <span>Capacity</span>
                            <img src="~/images/capacity_icon.png" alt="Capacity">
                            <span>@room.Capacity</span>
                        </div>
                        <div class="detail-item">
                            <span>Equipment</span>
                            <img src="~/images/equipment_icon.png" alt="Equipment">
                            <span>@room.Equipment</span>
                        </div>
                    </div>
                    <button class="book-button">Book Room</button>
                </div>
            </div>
        }
    </div>
</div>
<button class="carousel-button right" onclick="moveRight()">&#10095;</button>


@section scripts {
    <script>
        let currentPosition = 0;
        const container = document.querySelector('.container');
        const totalCards = @rooms.Count();
        const visibleCards = 3;
        const cardWidth = 400; // 280px card + 20px gap

        function moveLeft() {
            if (currentPosition > 0) {
                currentPosition--;
                updateCarousel();
            }
        }

        function moveRight() {
            if (currentPosition < totalCards - visibleCards) {
                currentPosition++;
                updateCarousel();
            }
        }

        function updateCarousel() {
            container.style.transform = `translateX(-${currentPosition * cardWidth}px)`;
        }
    </script>
}
