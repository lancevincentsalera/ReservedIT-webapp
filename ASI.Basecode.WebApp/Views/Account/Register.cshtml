@using ASI.Basecode.Services.ServiceModels
@model UserViewModel
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Register Page";
}
@section styles {
    <link rel="stylesheet" href="~/css/login.css" />
}
<div class="container py-5 h-100 register-box">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-10">
            <div class="card rounded-3 text-black">
                <div class="row g-0">
                    <div class="card-body p-md-5 mx-md-4">

                        <div class="text-center">
                            <img src="https://www.alliance.com.ph/images/asi-logo-invert.svg"
                                 style="width: 185px;" alt="logo">
                        </div>

                        <form method="post" action="/Account/Register">
                            <div class="form-outline mb-4">
                                <label class="form-label" for="email">Email</label>
                                <input type="text" id="email" class="form-control"
                                       asp-for="Email" placeholder="Enter email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <label class="form-label" for="fistName">First name</label>
                                <input type="text" id="firstName" class="form-control"
                                       asp-for="FirstName" placeholder="Enter first name" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <label class="form-label" for="lastName">Last name</label>
                                <input type="text" id="lastName" class="form-control"
                                       asp-for="LastName" placeholder="Enter last name" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <label class="form-label" for="roleId">Role</label>
                                <select asp-for="RoleId" id="roleId" class="form-control")">
                                    <option value="" disabled>Select Role</option>
                                    @foreach (var role in Model.Roles)
                                    {
                                        <option value="@role.RoleId">@GetRoleDisplayName(role.RoleId)</option>
                                    }
                                </select>
                                <span asp-validation-for="RoleId" class="text-danger"></span>
                            </div>
                            <div class="text-center pt-1 mb-5 pb-1 d-flex flex-column align-items-center">
                                <button class="btn btn-primary btn-block login-btn gradient-custom-2 mb-3" type="submit">
                                    Register
                                </button>
                                <a asp-controller="Account" asp-action="Login">
                                    &#8592 Back
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetRoleDisplayName(int roleId)
    {
        switch(roleId)
        {
            case 1:
                return "Admin";
            case 2:
                return "Regular User";
            case 3:
                return "Manager";
            default:
                return "";
        }
    }
}