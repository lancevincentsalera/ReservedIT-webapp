@model IEnumerable<ASI.Basecode.Services.ServiceModels.UserViewModel>

@{
    ViewData["Title"] = "RoomDashboard";
}

<div class="dashboard-header">
    <h1>Rooms</h1>
    <button type="button" class="create-user-btn" onclick="displayModal()"> <img src="~/img/add-logo.png" />Create User</button>
</div>

<div class="table-container">
    <div class="user-row header">
        <div class="user-cell">ROOM ID</div>
        <div class="user-cell">ROOM NAME</div>
        <div class="user-cell">DESCRIPTION</div>
        <div class="user-cell">CAPACITY</div>
        <div class="user-cell">LOCATION</div>
        <div class="user-cell">EQUIPMENT</div>
        <div class="user-cell"></div>
    </div>
    <ul class="user-list">
        @foreach (var item in Model)
        {
            <li class="user-row">
                <div class="user-cell" data-label="ROOM ID"></div>
                <div class="user-cell" data-label="ROOM NAME"></div>
                <div class="user-cell" data-label="DESCRIPTION"></div>
                <div class="user-cell" data-label="CAPACITY"></div>
                <div class="user-cell" data-label="LOCATION"></div>
                <div class="user-cell" data-label="EQUIPMENT"><span class="status"></span></div>
                <div class="user-cell actions">
                    <div class="mr-20 hover-pointer dropdown-trigger">
                        <span class="ddicon">&#8942;</span>
                        <div class="dropdown-action">
                            <ul>
                                <li>
                                    <form asp-action="ActivateUser" method="post">
                                        <input type="hidden" name="userId" value="" />
                                        <button type="submit" class="btn-status">Activate</button>
                                    </form>
                                </li>
                                <li>
                                    <form asp-action="RestrictUser" method="post">
                                        <input type="hidden" name="userId" value="" />
                                        <button type="submit" class="btn-status">Restrict</button>
                                    </form>
                                </li>
                                <li>
                                    <button type="button" class="create-user-btn">
                                        Edit User
                                    </button>
                                </li>
                                <li>Delete</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>

@Html.Partial("_ConfirmationModal")
@Html.Partial("_CreateUserModal")
@Html.Partial("_EditUserModal")


@section scripts {
    <script>
        
    </script>
}

